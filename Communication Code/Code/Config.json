{
    "program": {
        "reading_interval": 0.5
    },
    "pressure_sensor" : {
        "serial": {
            "port": "COM3",
            "baudrate": 9600,
            "bytesize": 8,
            "parity": "N",
            "stopbits": 1,
            "timeout": 3,
            "address" : "001",
            "terminator" : "\r"
        },
        "commands": {
            "read_value": {
                "format": "{address}00{param_num}{data_len}{data}"
            },
            "set_value": {
                "format": "{address}01{param_num}{data_len}{data}"
            }
        },
        "parameters": {
            "pressure": {
                "number": "0740",
                "response_type": "u_expo_new"
            },
            "unit": {
                "number": "0643",
                "response_type": "u_short_int",
                "write_format": "{:03}",
                "value_map": {
                    "mbar": "000",
                    "Torr": "001",
                    "hPa": "002"
                }
            }
        }
    },
    "spectrum_analyzer" : {    
        "visa": {
            "resource_string": "GPIB0::01::INSTR",
            "visa_backend": "",
            "timeout": 60000,
            "save_path": "wave_data/data.csv",
            "center_frequency": 2500000000,
            "span": 100000000,
            "reference_level": 0
        },
        "commands": {
            "identity_query": "*IDN?",
            "operation_complete_query": "*OPC?",
            "set_data_format": "FORM:DATA REAL,32",
            "set_byte_order": "FORM:BORD SWAP",
            "set_center_frequency": ":FREQuency:CENTer {value}",
            "set_reference_level": ":DISPlay:WINDow:TRACe:Y:RLEVel {value}",
            "set_span": ":FREQuency:SPAN {value}",
            "set_sweep_time": ":SWEep:TIME {value}",
            "set_sweep_time_auto": ":SWEep:TIME:AUTO {value}",
            "set_averaging_state": ":AVERage:STATe {value}",
            "set_averaging_count": ":AVERage:COUNt {value}",
            "query_frequency_start": ":FREQuency:STARt?",
            "query_frequency_stop": ":FREQuency:STOP?",
            "query_sweep_points": ":SWEep:POINts?",
            "query_trace_data": ":TRACe:DATA? TRACE1"
        }
    }
}